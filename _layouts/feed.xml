{% assign podcast = site.data.podcasts[page.podcast-id] %}<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd">
  <channel>
    <title>{{ podcast.title }}</title>
    <description>{{ podcast.description }}</description>
    <itunes:image href="{{ "/logo.jpg" | prepend: page.podcast-id | prepend: "/" | prepend: site.baseurl | prepend: site.url }}" />
    <link>{{ "/" | prepend: page.podcast-id | prepend: "/" | prepend: site.baseurl | prepend: site.url }}</link>
    <language>{{ site.lang }}</language>
    <pubDate>{{ podcast.time }}</pubDate>
    <author>wctang-data</author>
{% for item in podcast.items %}
{% assign fn = item.title | slice: 0, 2 | prepend: "/" | append: ".mp3" %}
    <item>
      <title>{{ item.title }}</title>
      <pubDate>{{ podcast.time }}</pubDate>
      <enclosure url="{{ fn | prepend: page.podcast-id | prepend: "/" | prepend: site.baseurl | prepend: site.url }}" type="audio/mpeg" />
    </item>
{% endfor %}
  </channel>
</rss>
